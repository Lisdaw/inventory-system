<%- include('partials/header') %>

<div class="card shadow-sm">
  <div class="card-header bg-white">
    <h5><i class="bi bi-pencil-square"></i> Edit Barang</h5>
  </div>

  <div class="card-body">
    <form method="POST" action="/edit/<%= item.id %>" class="row g-3">
      <div class="col-md-6">
        <label class="form-label">Nama Barang</label>
        <input name="item_name" value="<%= item.item_name %>" class="form-control">
      </div>

      <div class="col-md-6">
        <label class="form-label">Kategori</label>
        <input name="category" value="<%= item.category %>" class="form-control">
      </div>

      <div class="col-md-4">
        <label class="form-label">Harga</label>
        <input type="number" name="price" value="<%= item.price %>" class="form-control">
      </div>

      <div class="col-md-4">
        <label class="form-label">Stok</label>
        <input type="number" name="stock_qty" value="<%= item.stock_qty %>" class="form-control">
      </div>

      <div class="col-md-4">
        <label class="form-label">Minimum Stok</label>
        <input type="number" name="min_stock" value="<%= item.min_stock %>" class="form-control">
      </div>

      <div class="col-md-12">
        <label class="form-label">Lokasi Rak</label>
        <input name="storage_location" value="<%= item.storage_location %>" class="form-control">
      </div>

      <div class="col-12 text-end">
        <button class="btn btn-primary">
          <i class="bi bi-save"></i> Update
        </button>
      </div>
    </form>
  </div>
</div>
<%- include('partials/footer') %>